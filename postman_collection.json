{
  "info": {
    "name": "Golang Project API",
    "_postman_id": "golang-project-api",
    "description": "Postman collection for movie review API (auth, genres, movies, reviews).",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth - Register",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "{{base_url}}/api/v1/auth/register",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "auth", "register"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@example.com\",\n  \"username\": \"user\",\n  \"password\": \"password123\"\n}"
        }
      }
    },
    {
      "name": "Auth - Login (user)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "{{base_url}}/api/v1/auth/login",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "auth", "login"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\"\n}"
        }
      }
    },
    {
      "name": "Genres - List",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{base_url}}/api/v1/genres",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "genres"]
        }
      }
    },
    {
      "name": "Genres - Create (admin)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{admin_token}}" }
        ],
        "url": {
          "raw": "{{base_url}}/api/v1/genres",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "genres"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Drama\"\n}"
        }
      }
    },
    {
      "name": "Movies - List",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{base_url}}/api/v1/movies",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "movies"]
        }
      }
    },
    {
      "name": "Movies - Create (admin)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{admin_token}}" }
        ],
        "url": {
          "raw": "{{base_url}}/api/v1/movies",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "movies"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Inception\",\n  \"description\": \"Movie\",\n  \"release_year\": 2010,\n  \"director\": \"Nolan\",\n  \"duration_minutes\": 120,\n  \"genre_ids\": [\"1\"]\n}"
        }
      }
    },
    {
      "name": "Reviews - Create (user)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{user_token}}" }
        ],
        "url": {
          "raw": "{{base_url}}/api/v1/movies/1/reviews",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "movies", "1", "reviews"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"rating\": 9,\n  \"title\": \"Great\",\n  \"content\": \"Nice movie\"\n}"
        }
      }
    }
  ],
  "variable": [
    { "key": "base_url", "value": "http://localhost:8080" },
    { "key": "admin_token", "value": "" },
    { "key": "user_token", "value": "" }
  ]
}


